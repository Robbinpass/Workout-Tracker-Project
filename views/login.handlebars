{{!-- This file is for both login and signup --}}
<div class="d-flex flex-row justify-content-start mt-3">
    <form class="d-flex flex-column p-5"  id="login">
        <label for="email">Email</label>
        <input type="text" id="email">
        <label for="password">Password</label>
        <input type="password" id="password">
        <button type="submit" class="mt-3">Login</button>
    </form>
    <form class="d-flex flex-column p-5" id="signup">
        <label for="email">Email</label>
        <input type="text" id="signupEmail">
        <label for="password">Password</label>
        <input type="password" id="signupPassword">
        <label for="firstName">First Name</label>
        <input type="text" id="firstName">
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName">
        <button type="submit" class="mt-3" >Sign up</button>
    </form>
</div>

 <script src="/js/login.js"></script>